<!doctype html>
<html lang="pt-BR">
<head>
  {% set assetVersion = '20260224-1' %}
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{% block title %}Dashboard{% endblock %}</title>
  <script>
    (function () {
      try {
        if (localStorage.getItem('dashboard_sidebar_collapsed_desktop') === '1') {
          document.documentElement.classList.add('db-sidebar-collapsed-initial');
        }
      } catch (error) {
      }
    })();
  </script>
  <link rel="stylesheet" href="{{ asset_base_path }}/assets/css/dashboard.css?v={{ assetVersion }}">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="icon" type="image/png" href="{{ asset_base_path }}/assets/img/brand/nc6.png">
  <script src="https://unpkg.com/htmx.org@1.9.12" defer></script>
  {% block head %}{% endblock %}
</head>
<body>
  <div id="db-loading" class="db-loading" aria-hidden="true"></div>
  <div
    id="db-app"
    hx-boost="true"
    hx-target="#db-content"
    hx-select="#db-content"
    hx-swap="outerHTML show:none"
    hx-push-url="true"
    hx-indicator="#db-loading"
  >
    {% block content %}{% endblock %}
  </div>
  <script src="{{ asset_base_path }}/assets/js/sidebar-toggle.js?v={{ assetVersion }}" defer></script>
</body>
</html>
